#include <unistd.h>
#include <stdio.h>
#include <stdlib.h>
#include "vToc.h"
#include "vSh.h"

#define MAXBUF 1000

int vCmp(char *str1, char *str2) {
  int i;
  for (i = 0; str1[i] == str2[i]; i++) {
    if(str1[i] == '\0') {
      return 1;
    }
  }
  return 0;
}

int main(int argc, char** argv, char** envp) {
  char **cmd;
  char *cmdStr;
  char buf[MAXBUF];
  int len;
  int i;
  
  while(1) {
    write(1, "$ ", 2);
    len = read(0, buf, (size_t)MAXBUF);
    cmdStr = buf;
    cmd = vToc(cmdStr, ' ');
    if(vCmp(cmd[0], "exit")) {
      exit(0);
    }
    for(i = 0; cmd[i] != '\0'; i++) {
      printf(cmd[i]);
    }
   
  }
  return 0;
}
